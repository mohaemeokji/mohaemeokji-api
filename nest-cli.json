{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "app",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": ["@nestjs/swagger"],
    "assets": [
      {
        "include": "**/*.yaml",
        "outDir": "dist/src",
        "watchAssets": true
      }
    ]
  }
}